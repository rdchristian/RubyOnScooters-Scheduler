- model_class = Resource
.page-header
  %h1=t '.title', :default => @resource.name

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @resource.description
%p
  %strong= 'Amount Owned:'
  %br
  = @resource.numberOf
%p
  %strong= model_class.human_attribute_name(:storage_location) + ':'
  %br
  = @resource.storage_location
%p
  %strong= model_class.human_attribute_name(:max_reserve_time) + ':'
  %br
  = @resource.max_reserve_time.strftime("%k hours and %M minutes")


-if current_user.is_admin?
  = link_to t('.back', :default => t("helpers.links.back")), resources_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_resource_path(@resource), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), resource_path(@resource), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
