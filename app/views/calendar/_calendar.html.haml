- javascript "calendar"

- require 'json'
= hidden_field_tag 'events-array' , events_to_calendar_format(events_array).to_json
= hidden_field_tag 'starting-date', starting_date

.container-float
  .jumbotron{ style: 'border-radius: 10px;' }
    .pull-right.form-inline
      .btn-group
        %button.btn.btn-primary{"data-calendar-nav" => "prev"} << Prev
        %button.btn.btn-default{"data-calendar-nav" => "today"} Today
        %button.btn.btn-primary{"data-calendar-nav" => "next"} Next >>
      .btn-group
        %button.btn.btn-warning{"data-calendar-view" => "year"} Year
        %button.btn.btn-warning.active{"data-calendar-view" => "month"} Month
        %button.btn.btn-warning{"data-calendar-view" => "week"} Week
        %button.btn.btn-warning{"data-calendar-view" => "day"} Day
    %h3.head-title
  .row
    .col-md-9
      #calendar
    .col-md-3
      %h4 Events
      %ul#eventlist.nav.nav-list
  .clearfix
  %br
    %br
      #events-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h3.modal-title Event
            .modal-body{:style => "height: auto; overflow: scroll;"}
            .modal-footer
              %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
