- model_class = Event
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @event.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @event.description
%p
  %strong= model_class.human_attribute_name(:start) + ':'
  %br
  = @event.start
%p
  %strong= model_class.human_attribute_name(:end) + ':'
  %br
  = @event.end
%p
  %strong= model_class.human_attribute_name(:creator_name) + ':'
  %br
  = @event.creator_name


= link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(@event), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
