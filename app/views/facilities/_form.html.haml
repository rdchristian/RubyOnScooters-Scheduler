- javascript "global_controller"

= form_for @facility, html: { class: "form form-vertical facility" } do |f|
  =render 'shared/facilities_error_messages'
  .row
    .form-group.col-sm-4
      = f.label :name, class: 'control-label'
      .controls
        = f.text_field :name, class: 'form-control', required: true
      = error_span(@facility[:name])
  .row
    .form-group.col-sm-6
      = f.label :description, class: 'control-label'
      .controls
        = f.text_field :description, class: 'form-control', required: true
      = error_span(@facility[:description])
  .row
    .form-group.col-sm-2
      = f.label :capacity, class: 'control-label'
      .controls
        = f.text_field :capacity, class: 'form-control number-picker', required: true
      = error_span(@facility[:capacity])

  .row-float
    = f.submit nil,class: 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), facilities_path, :class => 'btn btn-default'
